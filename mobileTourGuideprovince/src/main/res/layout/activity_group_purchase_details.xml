<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:background="#02ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/grouppurchase_details_iv_01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:src="@drawable/img_return_selector" />

            <TextView
                android:id="@+id/grouppurchase_tv_01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="旅游团购"
                android:textColor="#fff"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/grouppurchase_details_iv_02"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/img_shoucang_selector" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="#000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <ListView
            android:id="@+id/grouppurchase_details_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

    <include layout="@layout/view_loading" />

</FrameLayout>