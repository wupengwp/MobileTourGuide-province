<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/pop_title_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7057BCFA"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="收听记录"
            android:textColor="#615D5E"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/pop_title_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="8dp"
            android:src="@drawable/title_back_btn_selector_2"
            android:text="" />
    </RelativeLayout>

    <ListView
        android:id="@+id/pop_list_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#70CCCCCC"
        android:fadingEdge="none"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>