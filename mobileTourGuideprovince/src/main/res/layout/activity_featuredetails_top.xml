<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout" >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="2dp" >
        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/activity_feature_details_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:clickable="true"
        android:padding="5dp"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/loading_mask_bg" />

    <TextView
        android:id="@+id/feature_details_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:padding="10dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/feature_details_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="在此评价"
        android:textColor="#fff" >
    </EditText>

    <TextView
        android:id="@+id/qinglun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:padding="10dp"
        android:text="发送"
        android:textColor="@color/style" />

</LinearLayout>