<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gongluebiaotou" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/travelstrategy_text_02"
            android:layout_alignBottom="@+id/travelstrategy_text_02"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@+id/travelstrategy_text_02"
            android:text="@string/travelstrategy_top"
            android:textColor="@color/style" />

        <TextView
            android:id="@+id/travelstrategy_text_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/login_user_logo_iv"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/login_user_logo_iv"
            android:text="TextView"
            android:textColor="#fff" />

        <com.jiagu.mobile.tourguide.widget.CircleImageView
            android:id="@+id/login_user_logo_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="20dp"
            android:padding="0dp"
            android:src="@drawable/icon_default_head" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="65dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/travelstrategy_text_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textColor="@color/style"
            android:layout_gravity="center" />
        <View 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_travelstategy_top_image"
            android:src="@drawable/btn_gonglue_tianjia"
            android:clickable="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>