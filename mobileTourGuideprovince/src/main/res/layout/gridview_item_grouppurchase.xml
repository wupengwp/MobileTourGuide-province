<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:padding="2dp"
    android:layout_height="240dp" >

    <ImageView
        android:id="@+id/activity_grouppurchase_gridview_item_imageview"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#60000000"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:background="#FFB130"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/activity_grouppurchase_gridview_item_textview_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0000"
                android:textColor="#fff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#fff" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                android:src="@drawable/gouwuche" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_grouppurchase_gridview_item_textview_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="right"
            android:text="大唐芙蓉园"
            android:background="#00000000"
            android:textColor="@color/style"
            android:textSize="12sp" />

        <!-- <TextView
            android:id="@+id/activity_grouppurchase_gridview_item_textview_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:text="门票"
            android:layout_marginRight="5dp"
            android:textColor="#fff"
            android:textSize="8sp" /> -->
    </LinearLayout>

</RelativeLayout>